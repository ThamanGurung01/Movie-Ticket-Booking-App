<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:elevation="2dp"
    android:layout_marginBottom="10dp">

    <TextView android:id="@+id/textBookingTitle"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        />

    <TextView android:id="@+id/textBookingQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quantity"
        />

    <TextView android:id="@+id/textBookingTotalPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cost"
        />

    <TextView android:id="@+id/textBookingShowTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Schedule"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/buttonAddMore"
            android:text="Edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/buttonCancelBooking"
            android:text="Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:backgroundTint="#C21717"/>
    </LinearLayout>
</LinearLayout>
