<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical" android:padding="16dp">

    <TextView android:id="@+id/textTitle"
        android:textStyle="bold"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Title" android:textSize="18sp"/>

    <TextView android:id="@+id/textDetails"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Year | Language | Duration"/>

    <TextView android:id="@+id/textDescription"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Description" />

    <TextView android:id="@+id/textGenres"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Genres" />
</LinearLayout>
